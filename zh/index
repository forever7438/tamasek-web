    <!-- TSIA按钮事件处理脚本 -->
    <script>
        // TSIA TLAK按钮点击事件
        function handleTsiaTlakClick() {
            // 防止事件冒泡，避免触发父元素的链接跳转
            event.preventDefault();
            event.stopPropagation();
            
            console.log('TSIA TLAK 按钮被点击');
            
            // 显示提示信息
            alert('TSIA TLAK 功能即将上线，敬请期待！');
            
            // 这里可以添加更多功能，比如：
            // - 跳转到特定页面
            // - 打开模态框
            // - 发送统计数据等
            
            // 示例：统计点击事件
            if (typeof gtag !== 'undefined') {
                gtag('event', 'click', {
                    'event_category': 'TSIA',
                    'event_label': 'TSIA TLAK Button'
                });
            }
        }
        
        // TSIA按钮点击事件
        function handleTsiaClick() {
            // 防止事件冒泡，避免触发父元素的链接跳转
            event.preventDefault();
            event.stopPropagation();
            
            console.log('TSIA 按钮被点击');
            
            // 显示提示信息
            alert('TSIA 功能即将上线，敬请期待！');
            
            // 这里可以添加更多功能，比如：
            // - 跳转到特定页面：window.open('https://tsia.example.com', '_blank');
            // - 打开模态框
            // - 发送统计数据等
            
            // 示例：统计点击事件
            if (typeof gtag !== 'undefined') {
                gtag('event', 'click', {
                    'event_category': 'TSIA',
                    'event_label': 'TSIA Button'
                });
            }
        }
        
        // 为所有TSIA按钮添加点击效果
        document.addEventListener('DOMContentLoaded', function() {
            // 添加额外的交互效果
            const tsiaButtons = document.querySelectorAll('.tsia-tlak-btn, .tsia-btn');
            
            tsiaButtons.forEach(button => {
                // 鼠标进入效果
                button.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-2px) scale(1.05)';
                });
                
                // 鼠标离开效果
                button.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0) scale(1)';
                });
                
                // 键盘访问支持
                button.addEventListener('keydown', function(e) {
                    if (e.key === 'Enter' || e.key === ' ') {
                        e.preventDefault();
                        this.click();
                    }
                });
            });
            
            console.log('TSIA按钮初始化完成，共找到', tsiaButtons.length, '个按钮');
        });
    </script>

</body>

